class SalaDeFoco:
    """
    Classe que representa a Sala de Foco, um local tranquilo para estudar localizado no Rio de Janeiro, RJ.
    """

    def __init__(self):
        """
        Inicializa a classe com as informações da Sala de Foco.
        """
        self.nome = "Sala de Foco"
        self.endereco = "Rua Voluntários da Pátria 301, sala 701, Botafogo, Rio de Janeiro, RJ"
        self.telefone = "21 99432-1982"
        self.email = "contato@saladefoco.com.br"
        self.site = "https://saladefoco.com.br/"
        self.horarios = {
            "manha": "06h/12h",
            "tarde": "12h/18h",
            "noite": "18h/00h",
        }
        self.planos = {
            "um_turno": {
                "seg_a_sex": 200,
                "sab_e_dom": 250,
                "todos_os_dias": 300,
            },
            "dois_turnos": {
                "seg_a_sex": 350,
                "sab_e_dom": 400,
                "todos_os_dias": 450,
            },
            "tres_turnos": {
                "seg_a_sex": 500,
                "sab_e_dom": 550,
                "todos_os_dias": 600,
            },
        }

    def get_nome(self):
        """
        Retorna o nome da Sala de Foco.
        """
        return self.nome

    def get_endereco(self):
        """
        Retorna o endereço da Sala de Foco.
        """
        return self.endereco

    def get_telefone(self):
        """
        Retorna o telefone da Sala de Foco.
        """
        return self.telefone

    def get_email(self):
        """
        Retorna o email da Sala de Foco.
        """
        return self.email

    def get_site(self):
        """
        Retorna o site da Sala de Foco.
        """
        return self.site

    def get_horarios(self):
        """
        Retorna os horários de funcionamento da Sala de Foco.
        """
        return self.horarios

    def get_planos(self):
        """
        Retorna os planos de assinatura da Sala de Foco.
        """
        return self.planos

    def agendar_visita(self):
        """
        Agenda uma visita gratuita à Sala de Foco.
        """
        print("Agende sua visita gratuita através do site de reservas:")
        print(self.site)

    def alugar_cabines(self):
        """
        Aluga uma cabine de estudo na Sala de Foco.
        """
        print("Para alugar uma cabine de estudo, entre em contato com a Sala de Foco pelo telefone ou email:")
        print(self.telefone)
        print(self.email)

    def __str__(self):
        """
        Retorna uma representação em string da Sala de Foco.
        """
        return f"Sala de Foco: {self.nome} - {self.endereco}"
